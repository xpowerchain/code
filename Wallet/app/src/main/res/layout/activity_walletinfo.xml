<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F9F9F9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/js_images_common_backdark"/>
            <TextView
                android:id="@+id/walletName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fa83bb"
                android:text="@string/save"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_30"
                android:textSize="@dimen/sp_18"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/headImg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_90"
            android:src="@mipmap/js_components_images_avatar6"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/asset"
            android:layout_width="@dimen/dp_165"
            android:layout_height="wrap_content"
            android:layout_below="@id/headImg"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:ellipsize="middle"
            android:singleLine="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/walletaddress"
            android:layout_width="@dimen/dp_165"
            android:layout_height="wrap_content"
            android:layout_below="@id/asset"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="0x8350612a02ca5d682053e251da337212e3968f8a"
            android:textColor="@color/color_DBE3E6"
            android:textSize="@dimen/sp_16"
            android:ellipsize="middle"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/dp_30"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/walletname"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"/>

    <EditText
        android:id="@+id/walletname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:textSize="@dimen/sp_14"
        android:hint="@string/walletname"
        android:textColorHint="@color/color_DBE3E6"
        android:background="@drawable/exittestbg"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textColor="@color/color_9DA1A4"/>
    <TextView
        android:id="@+id/updatePwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="@string/changePassword"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:drawableRight="@mipmap/js_images_common_arrow"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_F9F9F9"/>

    <TextView
        android:id="@+id/importprivatekey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="@string/exportPrivateKey"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:drawableRight="@mipmap/js_images_common_arrow"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_E1E1E1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

    <TextView
        android:id="@+id/importkeystore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="@string/exportKeystore"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:drawableRight="@mipmap/js_images_common_arrow"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_E1E1E1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <Button
            android:id="@+id/deleteWallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_9DA1A4"
            android:text="@string/deleteWallet"
            android:background="@drawable/bg_copy_button"/>
    </RelativeLayout>

</LinearLayout>