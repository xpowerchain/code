<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ECECEC">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_195"
        android:background="@color/color_fa83bb">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_16"/>
        <LinearLayout
            android:id="@+id/managerwallet"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_below="@+id/text"
            android:layout_toLeftOf="@+id/text"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/js_images_profile_wallet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/managerwallet"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/transferList"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_below="@+id/text"
            android:layout_toRightOf="@+id/managerwallet"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/js_images_profile_transaction"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/transrecords"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/settings"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:background="@color/white"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/js_images_profile_setting"
        android:drawableRight="@mipmap/js_images_common_arrow"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/aboutUs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/about"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:background="@color/white"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/js_images_profile_about"
        android:drawableRight="@mipmap/js_images_common_arrow"/>
</LinearLayout>