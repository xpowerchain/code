<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headImg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:actualImageResource="@mipmap/js_components_images_avatar6"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"/>
        <TextView
            android:id="@+id/walletName"
            android:layout_width="@dimen/dp_165"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/headImg"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="vhh"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:ellipsize="middle"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/walletaddress"
            android:layout_width="@dimen/dp_165"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/headImg"
            android:layout_below="@id/walletName"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="0x8350612a02ca5d682053e251da337212e3968f8a"
            android:textColor="@color/color_E1E1E1"
            android:textSize="@dimen/sp_14"
            android:ellipsize="middle"
            android:singleLine="true"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/js_images_common_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_DBE3E6"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/headImg"
            android:layout_below="@id/walletName"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            android:ellipsize="middle"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/headImg"
            android:layout_below="@id/walletName"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="ether"
            android:textColor="@color/color_E1E1E1"
            android:textSize="@dimen/sp_14"
            android:ellipsize="middle"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>