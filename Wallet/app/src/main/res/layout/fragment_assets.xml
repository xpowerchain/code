<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@color/color_fa83bb">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            app:layout_scrollFlags="scroll|enterAlways">
        </android.support.v7.widget.Toolbar>
        <ImageView
            android:id="@+id/headImg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_60"
            android:src="@mipmap/js_components_images_avatar6"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/headImg">
            <TextView
                android:id="@+id/walletname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拗口好地方科技"/>

        </LinearLayout>
        <TextView
            android:id="@+id/walletaddress"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/dp_165"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoLayout"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="0xjfd;lfd;llfl;dfsfdfdsddsffdgdsg  "
            android:ellipsize="middle"
            android:drawableRight="@mipmap/js_images_asset_walletaddress"
            android:textSize="@dimen/sp_12"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20">
            <TextView
                android:id="@+id/aseetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_24"
                android:text="≈0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:text="总资产($)"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/addasset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/js_images_asset_addasset"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:visibility="gone"/>
    </RelativeLayout>
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_9DA1A4"
            android:dividerHeight="1px"/>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

</LinearLayout>