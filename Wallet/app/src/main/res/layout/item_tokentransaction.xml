<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_adapter_content_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:text="2016-12"
        android:background="@color/color_EBEBEB"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:paddingTop="@dimen/dp_20"
        android:background="@color/white">


        <ImageView
            android:id="@+id/tokenImg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/wallet_default_icon"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:id="@+id/walletaddress"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9DA1A4"
            android:textSize="@dimen/sp_10"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/tokenImg"/>
        <TextView
            android:id="@+id/createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_E1E1E1"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/walletaddress"
            android:layout_toRightOf="@+id/tokenImg"/>
        <TextView
            android:id="@+id/amountcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9DA1A4"
            android:textSize="@dimen/sp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tokenImg"
            android:layout_alignParentBottom="true"
            android:background="@color/color_E1E1E1"/>
    </RelativeLayout>
</LinearLayout>
